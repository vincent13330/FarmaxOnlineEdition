<style>
@import url('https://fonts.googleapis.com/css2?family=Rubik&display=swap');
html, body {
	padding: 0px;
	margin: 0px;
}
body {
	
	background-image: url(static/images/backgroundImage.png);
	background-size: 100px;
}
#placer1 {
	width: 400px;
	margin-top: 2%;
	border: 1px solid;
	border-color: #0083FF;
	border-radius: 5px;
	background-color: white;
}
#titre {
	color: #0083FF;
	font-family: 'Rubik', sans-serif;
	font-size: 60px;
}

#labelName {
	font-family: 'Rubik', sans-serif;
	color: #0083FF;
}
#placer3 {
	margin-top: 30px;
}
#name {
	border: 1px solid;
	border-color: #0083FF;
	border-radius: 5px;
	height: 40px;
	width: 200px;
	outline: none;
	color: #0083FF;
	text-align: center;
	font-size: 20px;
}
#name:hover {
	border: 2px solid;
	border-color: #0083FF;
}
#name:focus {
	border: 2px solid;
	border-color: #0083FF;
	box-shadow: 0px 0px 8px #0083FF;
}
#createBouton {
	color: #fff;
	font-family: 'Rubik', sans-serif;
	font-size: 20px;
	background-color: #AED7FF;
	margin-top: 10px;
	border: none;
	padding: 10px;
	border-radius: 5px;
	outline: none;
}
#createBouton:hover {
	background-color: #0083FF;
	cursor: pointer;
}
#loginText {
	margin-top: 7px;
	font-family: 'Rubik', sans-serif;
	font-size: 15px;
	margin: 10px;
}
#loginBouton {
	color: #0083FF;
	text-decoration: none;
}
#loginBouton:hover {
	border-bottom: 1px solid;
	border-color: #0083FF;
}
#error {
	font-size: 15px;
	color: #FF0000;
	background-color: #F5B0B0;
	border-left: 3px solid;
	border-color: #FF0000;
	width: 300px;
	font-family: 'Rubik', sans-serif;
}
</style>
<center>
	<div id="placer1">
		<div id="titre">Create your account</div>
		<form action="/register" method="POST">

			<div id="placer3">
				<label for="name" id="labelName">Pseudo</label>
				<br />
				<input type="text" minlength="4" maxlength="12" id="name" name="name" required>
			</div>

			<div id="placer3">
				<label for="email" id="labelName">Email</label>
				<br />
				<input type="email" maxlength="56" id="name" name="email" required>
			</div>

			<div id="placer3">
				<label for="password" id="labelName">Password</label>
				<br />
				<input minlength="8" maxlength="26" type="password" id="name" name="password" required>
			</div>

			<div id="placer3">
				<label for="passwordd" id="labelName">Password confirmation</label>
				<br />
				<input minlength="8" maxlength="26" type="password" id="name" name="passwordd" required>
			</div>

			<br />
			<div id="error">
  			<%= messagee %>
			</div>
			<button type="submit" id="createBouton">Create</button>
		</form>
		<div id="loginText">You already have an account?&nbsp;<a id="loginBouton" href="/login">Login</a><div>
	</div>
</center>