<link rel="import" href="style.css">
<style>
@import url('https://fonts.googleapis.com/css2?family=Rubik&display=swap');
html, body {
	padding: 0px;
	margin: 0px;
}
body {
	
	background-image: url(static/images/backgroundImage.png);
	background-size: 100px;
}
#placer1 {
	width: 400px;
	border: 1px solid;
	border-color: #0083FF;
	border-radius: 5px;
	background-color: white;
    margin-top: 11%;
}
#titre {
	color: #0083FF;
	font-family: 'Rubik', sans-serif;
	font-size: 60px;
}

#labelName {
	font-family: 'Rubik', sans-serif;
	color: #0083FF;
}
#placer3 {
	margin-top: 30px;
}
#name {
	border: 1px solid;
	border-color: #0083FF;
	border-radius: 5px;
	height: 40px;
	width: 200px;
	outline: none;
	color: #0083FF;
	text-align: center;
	font-size: 20px;
}
#name:hover {
	border: 2px solid;
	border-color: #0083FF;
}
#name:focus {
	border: 2px solid;
	border-color: #0083FF;
	box-shadow: 0px 0px 8px #0083FF;
}
#createBouton {
	color: #fff;
	font-family: 'Rubik', sans-serif;
	font-size: 20px;
	background-color: #AED7FF;
	border: none;
	padding: 10px;
	border-radius: 5px;
	outline: none;
	margin-top: 10px;
}
#createBouton:hover {
	background-color: #0083FF;
	cursor: pointer;
}
#loginText {
	margin-top: 7px;
	font-family: 'Rubik', sans-serif;
	font-size: 15px;
	margin: 10px;
}
#loginBouton {
	color: #0083FF;
	text-decoration: none;
}
#loginBouton:hover {
	border-bottom: 1px solid;
	border-color: #0083FF;
}
#error {
	font-size: 15px;
	color: #FF0000;
	background-color: #F5B0B0;
	border-left: 3px solid;
	border-color: #FF0000;
	width: 300px;
	font-family: 'Rubik', sans-serif;
}
</style>
<center>
	<div id="placer1">
		<div id="titre">Login</div>
		<form action="/login" method="POST">

			<div id="placer3">
				<label for="email" id="labelName">email</label>
				<br />
				<input type="email" id="name" name="email" required>
			</div>

			<div id="placer3">
				<label for="password" id="labelName">Password</label>
				<br />
				<input type="password" id="name" name="password" required>
			</div>
			<br />
			<div id="error">
			<% if (messages.error) { %>
  			<%= messages.error %>
			<% } %>
			</div>
			<button type="submit" id="createBouton">Login</button>
		</form>
		<div id="loginText">Don't have an account yet?&nbsp;<a id="loginBouton" href="/register">Create an account</a><div>
	</div>
</center>